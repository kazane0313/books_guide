@chareset "UTF-8"

// 共通部分

haml {
  font-size: 100%;
}


body {
  line-height: 1.7;
  color: #432;
}

img {
  max-width: 100%
}

// HEADER

.logo {
  width: 210px;
  margin-top: 14px;
  margin-left: 14px;
}

.page-header {
  display:flex;
  justify-content: space-between;
}

.wrapper {
  max-width:1100px;
  margin: 0 auto;
  padding: 0 4%;
}

.main-nav {
  display: flex;
  font-size: 1.25rem;
  margin-top: 34px;
  list-style: none;

  li{
    margin-left: 36px;
  }
}

// HOME
.home-content {
  text-align:center;
  margin-top: 300px;

}

// 大きな背景画像
.big-bg {
  background-size: cover;
  background-position: center top;
  background-repeat: no-repeat;
}

.home {
  background-image: url("<%= asset_path('main.png') %>");
  min-height: 100vh;
}

// ボタン
.button {
  font-size: 1.375rem;
  background: darken(#f3981d, 25%);
  color: #fff;
  border-radius: 5px;
  padding: 18px 32px;
}

.btn:hover {
  background: #0090aa;
}
